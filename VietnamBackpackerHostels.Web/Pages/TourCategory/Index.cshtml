@model VietnamBackpackerHostels.Web.Pages.TourCategory.IndexModel

@section Styles {
    <style type="text/css">
        .small-carousel .carousel-item {
            height: 450px;
        }

        .rounded-pill {
            border-radius: 0rem !important;
        }

